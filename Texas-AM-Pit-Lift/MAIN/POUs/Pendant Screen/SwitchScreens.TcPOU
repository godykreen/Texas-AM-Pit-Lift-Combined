<?xml version="1.0" encoding="utf-8"?>
<TcPlcObject Version="1.1.0.1" ProductVersion="3.1.4022.12">
  <POU Name="SwitchScreens" Id="{6a02257c-3ca6-42d0-b540-f283b9817c7d}" SpecialFunc="None">
    <Declaration><![CDATA[PROGRAM SwitchScreens
VAR
	screenFound : BOOL := TRUE;
	screenSearchAttempts : INT := 0;
	screenRetryInerval: INT := 10;
	wasNoScreen : BOOL := FALSE;
	
	wasEstop : BOOL := FALSE;
	wasDoorFault : BOOL := FALSE;
	wasUpLimit : BOOL := FALSE;
	wasDwnLimit : BOOL := FALSE;
	wasJogging : BOOL := FALSE;
	wasRunningToTarget : BOOL := FALSE;
	doubleWrite : BOOL := FALSE;
END_VAR
]]></Declaration>
    <Implementation>
      <ST><![CDATA[IF GV_MODBUS.screen.Error THEN
	screenFound := FALSE;
	wasNoScreen := TRUE;
	
	IF screenSearchAttempts > screenRetryInerval THEN
		screenFound := TRUE;
		GV_MODBUS.readExecute := TRUE;
	END_IF
	
	screenSearchAttempts := screenSearchAttempts + 1;
ELSE
	screenFound := TRUE;
		
	IF not GV_LIFT.ESTOP_INDICATOR_OUT THEN
		EStop();
		
		IF NOT wasEstop THEN
			Execute_Write_Screen();
		END_IF
		
		wasEstop := TRUE;
		GV_MODBUS.wasMTS := FALSE;
		wasDoorFault := FALSE;
		wasUpLimit := FALSE;
		wasDwnLimit := FALSE;
		wasJogging := FALSE;
		wasRunningToTarget := FALSE;
	ELSIF GV_LIFT.DOOR_1_INDICATOR_OUT OR GV_LIFT.DOOR_2_INDICATOR_OUT OR GV_LIFT.DOOR_3_INDICATOR_OUT OR GV_LIFT.DOOR_4_INDICATOR_OUT THEN	
		DoorFaults();	
	
		IF NOT wasDoorFault THEN
			Execute_Write_Screen();
		END_IF
		
		wasEstop := FALSE;
		GV_MODBUS.wasMTS := FALSE;
		wasDoorFault := TRUE;
		wasUpLimit := FALSE;
		wasDwnLimit := FALSE;
		wasJogging := FALSE;
		wasRunningToTarget := FALSE;
		
	ELSIF GV_LIFT.UP_LIMIT_INDICATOR_OUT OR GV_LIFT.CRUSH_PROTECTION_INDICATOR_OUT OR GV_LIFT.CURRENT_POSITION > XML.savedvalues.UpSoftLim THEN
		UpLimit();	
	
		IF NOT wasUpLimit THEN
			Execute_Write_Screen();
		END_IF
		
		wasEstop := FALSE;
		GV_MODBUS.wasMTS := FALSE;
		wasDoorFault := FALSE;
		wasUpLimit := TRUE;
		wasDwnLimit := FALSE;
		wasJogging := FALSE;
		wasRunningToTarget := FALSE;
		
	ELSIF GV_LIFT.ULTIMATE_LIMIT_INDICATOR_OUT OR GV_LIFT.DOWN_LIMIT_INDICATOR_OUT OR GV_LIFT.CURRENT_POSITION < XML.savedvalues.DownSoftLim THEN
		DownLimit();	
	
		IF NOT wasDwnLimit THEN
			Execute_Write_Screen();
		END_IF
		
		wasEstop := FALSE;
		GV_MODBUS.wasMTS := FALSE;
		wasDoorFault := FALSE;
		wasUpLimit := FALSE;
		wasDwnLimit := TRUE;
		wasJogging := FALSE;
		wasRunningToTarget := FALSE;
	ELSIF GV_LIFT.RUN_BUTTON_OUT AND GV_LIFT.MTP_ALLOWED THEN
		MoveToPosition();
		
		IF NOT wasRunningToTarget THEN
			Execute_Write_Screen();
		END_IF
		
		
		wasEstop := FALSE;
		GV_MODBUS.wasMTS := FALSE;
		wasDoorFault := FALSE;
		wasUpLimit := FALSE;
		wasDwnLimit := FALSE;
		wasJogging := FALSE;
		wasRunningToTarget := TRUE;
	ELSIF GV_LIFT.UP_BUTTON_OUT OR GV_LIFT.DOWN_BUTTON_OUT THEN
		JogLift();
		
		IF NOT wasJogging THEN
			Execute_Write_Screen();	
		END_IF
		
		wasEstop := FALSE;
		GV_MODBUS.wasMTS := FALSE;
		wasDoorFault := FALSE;
		wasUpLimit := FALSE;
		wasDwnLimit := FALSE;
		wasJogging := TRUE;
		wasRunningToTarget := FALSE;
	
	ELSE
		SelectSpike();
		
		IF NOT GV_MODBUS.wasMTS THEN
			Execute_Write_Screen();	
			doubleWrite := TRUE;		
		END_IF
		
		IF doubleWrite AND GV_MODBUS.doneWriting AND GV_MODBUS.wasMTS THEN
			Execute_Write_Screen();
			doubleWrite := FALSE;
		END_IF
		
		wasEstop := FALSE;
		GV_MODBUS.wasMTS := TRUE;
		wasDoorFault := FALSE;
		wasUpLimit := FALSE;
		wasDwnLimit := FALSE;
		wasJogging := FALSE;
		wasRunningToTarget := FALSE;
	END_IF
	
	IF wasNoScreen THEN
		wasNoScreen := FALSE;
		Execute_Write_Screen();
	END_IF
END_IF

IF screenFound THEN	
	ReadWriteScreen();
	screenSearchAttempts := 0;
END_IF
]]></ST>
    </Implementation>
